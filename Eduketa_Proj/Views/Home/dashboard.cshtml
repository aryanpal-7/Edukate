@model Eduketa_Proj.Models.UserDashboard
@{ ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <a href="/Home/Enquiry" class="btn btn-success ">Your Enquiries</a>

    


</div>

@if (Model.course.Count <= 0)
{

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">No Orders Found</h5>
                        <p class="card-text text-dark font-weight-bold"> Looks like you haven't placed any order.</p>
                        <div class="row justify-content-end mr-4">
                            <a href="/Home/Courses" class="btn btn-success">Order Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <h1 class="text-info">Welcome @Model.user.name</h1>
        <h1>Order History</h1>
        @for (int i = 0; i < Model.course.Count; i++)
        {
            
            <!-- Order Card -->
                <div class="card order-card mb-5 border-dark" style="border-width:3px;">
                    <div class="card-header">
                        Order id:<span class="text-dark font-weight-bold">@Model.coursepayments[i].orderid</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <img src="@Url.Content(@Model.course[i].image)" width="100%" height="200px" alt="Product Image">
                            </div>
                            <div class="col-md-9">
                                <p class="product-name">Product Name:<span class=" text-dark font-weight-bold">@Model.course[i].name</span> </p>
                                <p>Order Date:<span class=" text-dark  font-weight-bold">@Model.bought[i].Purchased_Date.ToString().Split(' ')[0]</span> </p>

                                <p>Amount Paid: <i class="fas fa-rupee-sign"></i><span class=" text-dark  font-weight-bold">@Model.course[i].price</span> </p>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-end align-items-end">

                                <p class="text-dark mb-0  justify-content-end"><a href="/Home/Details/@Model.bought[i].course_id" class="btn btn-block btn-success">See Course</a></p>

                            </div>
                        </div>
                    
                </div>
            </div>}
        <!-- End Order Card -->
        <!-- Repeat for each order -->
    </div>
}