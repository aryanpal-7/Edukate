@model Eduketa_Proj.Models.DetailsModel

@{
    ViewBag.Title = "Details";
}


    <!-- Header End -->
    <!-- Detail Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8">
                    <div class="mb-5">
                        <div class="section-title position-relative mb-5">
                            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Course Detail</h6>
                            <h1 class="display-4">@Model.course.name</h1>
                        </div>
                        <img class="img-fluid rounded w-100 mb-4" src="@Url.Content(Model.course.image)" alt="Image">
                        <p>
                            @Model.course.description
                        </p>
                    </div>
                    <div class="col-lg-12 mt-5 ">
                        <div class="bg-primary mb-5 py-3">
                           <h5 class="text-white py-3 px-4 m-0">Course Price:<i class="fas fa-rupee-sign"></i> @Model.course.price</h5><span class="px-4"><a href="/Home/Contact/@Model.course.SellerId" class="btn btn-success">Contact Seller</a></span>
                            <div class="py-3 px-4">
                                @if (Model.bought_course == null)
                                {
                                    <a class="btn btn-block btn-secondary py-3 px-5" href="/Home/Enroll/@Model.course.id">Enroll Now</a>}
                                else
                                {
                                    <button class="btn btn-info btn-block py-3 px-5">Already Purchased!</button>
                                }
                            </div>
                        </div>


                    </div>
                    <h2 class="mb-3">Related Courses</h2>
                    <div class="owl-carousel related-carousel  position-relative" style="padding: 0 30px;">
                        @foreach (var x in Model.courses)
                        {
                            <a class="courses-list-item position-relative d-block overflow-hidden mb-2" href="/Home/Details/@x.id">
                                <img height="500px" width="100%" src="@Url.Content(x.image)" alt="">
                                <div class="courses-text">
                                    <h3 class="text-center text-white px-3">
                                        @x.name
                                    </h3>
                                    <div class="border-top w-100 mt-3">
                                        <div class="d-flex justify-content-end p-4">

                                            <span class="text-white justify-content-end">
                                                <i class="fas fa-rupee-sign"></i>@x.price

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>}
                    </div>
                </div>

              
            </div>
        </div>
    </div>
    <!-- Detail End -->