
@model IEnumerable<Eduketa_Proj.Models.Course>
@{
    ViewBag.Title = "ShowData";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

    <div class="container">
        @if (Model.Count() == 0)
        {
            <p class="h3 text-danger">No Course Added Yet..!Add Course <span><a href="/Admin/Index" class="btn btn-outline-success">here...</a></span></p>
        }
        else
        {
            <table class="table table-striped table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th class="text-center">Description</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.name</td>
                        <td width="100px">
                            <p><i class="fa">&#xf156;</i>@x.price</p>
                        </td>

                        <td width="200px"><center><img src="@Url.Content(x.image)" class="img-fluid img-thumbnail" width="100px" /></center></td>
                        <td id="read_more">
                            @x.description.Substring(0, 100)<span>...</span>
                        </td>
                        
                        <td> @Html.ActionLink("Edit", "Edit", new { id = x.id })</td>
                        <td> @Html.ActionLink("Delete", "Delete", new { id = x.id }, new { @onclick = "return confirm('Are You Sure You Want To Delete This Record.')" })</td>
                    </tr>
                }
            </table>}
    </div>



