@model Eduketa_Proj.Models.Seller
@{
    ViewBag.Title = "Reset_Password";
    Layout = "~/Views/Shared/_AdminHome.cshtml";
}

<div class="row justify-content-center bg-image mx-0 mb-5">
    <div class="col-lg-6 py-5">
        <div class="bg-white p-5 my-5">

            <h1 class="text-center mb-4">Forgot Password</h1>
            <!-------------Login Form--------->
            <form action="/Admin/Reset_Password" method="post">

                <div class="form-row">

                    <input type="hidden" name="id" value="@Model.id"/>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="text" class="form-control bg-light border-0" placeholder="Enter Your new Password" name="pwd" style="padding: 30px 20px;">
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group">
                            <input type="text" class="form-control bg-light border-0" placeholder="Confirm Your new Password" name="cpwd" style="padding: 30px 20px;">
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <input type="Submit" class="btn btn-primary btn-block" value="Login" style="padding: 10px 5px;">
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>


